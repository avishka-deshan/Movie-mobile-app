<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp">
        <activity android:name=".IMDBResultsActivity"></activity>
        <activity android:name=".RatingsActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".DisplayMovieActivity" />
        <activity android:name=".EditMovieActivity" />
        <activity android:name=".FavouritesActivity" />
        <activity android:name=".AddToFavActivity" />
        <activity android:name=".RegisterMovieActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>